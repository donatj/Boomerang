{
	"name": "boomerang/boomerang",
	"type": "library",
	"homepage": "https://boomerang.work/",
	"description": "The Boomerang API Endpoint Testing Framework.",
	"keywords": [
		"api",
		"testing"
	],
	"license": "MIT",
	"support": {
		"issues": "https://github.com/donatj/Boomerang/issues"
	},
	"require": {
		"donatj/cli-toolkit": "^0.3.1",
		"donatj/flags": "^1.5",
		"php": ">=7.4.0",
		"ext-curl": "*",
		"ext-SPL": "*",
		"ext-json": "*"
	},
	"require-dev": {
		"donatj/drop": "*",
		"donatj/mock-webserver": "^2.6",
		"phpunit/phpunit": "^9.6.0",
		"ralouphie/getallheaders": "^3.0",
		"corpus/coding-standard": "^0.7.0",
		"squizlabs/php_codesniffer": "^3.7",
		"friendsofphp/php-cs-fixer": "^3.9"
	},
	"authors": [
		{
			"name": "Jesse G. Donat",
			"email": "donatj@gmail.com",
			"homepage": "https://donatstudios.com",
			"role": "Lead"
		}
	],
	"autoload": {
		"psr-0": {
			"Boomerang": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "test/"
		}
	},
	"bin": [
		"composer/bin/boomerang"
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
